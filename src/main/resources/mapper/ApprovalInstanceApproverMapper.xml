<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.finance.business.mapper.ApprovalInstanceApproverMapper">

    <select id="customerIdsByApproverId" resultType="java.lang.Long">
        select customer_id from approval_instance_approver
        where approver_id = #{approverId}
        group by customer_id
    </select>
</mapper>
